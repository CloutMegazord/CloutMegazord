{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "build",
    "ignore": [
      "dev_data",
      "firebase.json",
      "dev_data",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "api"
      },
      {
        "source": "/s/**",
        "function": "shortener"
      },
      {
        "source": "/powerTask/**",
        "function": "powerTask"
      },
      {
        "source": "!(/api/**|/s/**|/powerTask/**|/tsr)",
        "destination": "/index.html"
      },
      {
        "source": "/tsr",
        "destination": "/landing/tsr"
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  },
  "functions": {
    "source": "functions",
    "ignore": [
      "**/config/firebase.json",
      "**/node_modules/**"
    ]
  }
}
