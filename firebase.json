{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "build",
    "ignore": [
      "dev_data",
      "firebase.json",
      "dev_data",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "api"
      },
      {
        "source": "/s/**",
        "function": "shortener"
      },
      {
        "source": "/powerTask/**",
        "function": "powerTask"
      },
      {
        "source": "!(/api/**|/s/**|/powerTask/**)",
        "destination": "/index.html"
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}
