{
  /* Visit https://firebase.google.com/docs/database/security to learn more about security rules. */
  "rules": {
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid"
      }
    },
    "megazords": {
      "$mid":{
        ".read": "root.child('megazords').child($mid).child('pendingZords').hasChildren([auth.uid]) || root.child('megazords').child($mid).child('confirmedZords').hasChildren([auth.uid])"
      }
    },
    "customFees": {
      ".read": true
    },
    ".write": false
  }
}